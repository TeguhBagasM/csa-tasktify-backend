{
  "name": "express-sequelize-postgresql-api",
  "version": "1.0.0",
  "description": "Express.js API with Sequelize and PostgreSQL",
  "main": "server.js",
  "scripts": {
    "dev": "nodemon server.js",
    "start": "node server.js",
    "db:setup": "node scripts/setup-database.js",
    "db:safe-setup": "node scripts/safe-setup-database.js",
    "db:sync": "node -e \"require('dotenv').config(); require('./models').sequelize.sync({alter: false}).then(() => {console.log('Database synced!'); process.exit(0);}).catch(err => {console.error(err); process.exit(1);})\"",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:seed": "npx sequelize-cli db:seed:all"
  },
  "dependencies": {
    "express": "^4.18.2",
    "sequelize": "^6.32.1",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "sequelize-cli": "^6.6.1"
  },
  "keywords": [
    "express",
    "sequelize",
    "postgresql",
    "api",
    "vercel"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
